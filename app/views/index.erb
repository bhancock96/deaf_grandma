<h1>Granny's Addressbook</h1>
<div class='address_form'>
	<form action='/address' method='post' id='contact_form'>
		<div>
			<label for='name'>Name</label>
			<input type='text' name='name' id='name'>
		</div>
		<div>
			<label for='address'>Street Address</label>
			<input type='text' name= 'address' id='address'>
		</div>
		<div>
			<label for='city'>City, State</label>
			<input type='text' name='city_state' id='city'>
		</div>
		<div>
			<label for='phone'>Phone Number</label>
			<input type='text' name='phone_number' id='phone'>
		</div>
		<div>
			<label for='email'>Email</label>
			<input type='text' name='email' id='email'>
		</div>
		<input type='submit' value='Save' class='submit'>
	</form>
</div>

<div class='address_list'>
	<div class='new_contact'></div>
	<% @contacts.each do |contact| %>
		<p class='contact' data-id='<%= contact.id %>'><%= contact.name %></p>
	<% end %>
</div>

<form action='/delete' method='post' class='delete'>
	<input type='hidden'>
	<input type='submit' value='Delete' class='submit' id='delete'>
</form>  
